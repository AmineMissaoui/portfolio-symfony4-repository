{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}
{% block section %} Blog {% endblock %}
{% block body %}
<section class="content">
  <div class="row">
    <div class="col-12">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header bg-white">
          <h3 class="card-title">Recherche</h3>
        </div>
        <form role="form">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-4">
                <div class="form-group">
                  <label for="searchTitle">Titre</label>
                  <input type="text" class="form-control" id="searchTitle" placeholder="">
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <label for="searchContenue">Contenue</label>
                  <input type="text" class="form-control" id="searchContenue" placeholder="">
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-group">
                  <label for="searchClient">Flag</label>
                  <input type="text" class="form-control" id="searchClient" placeholder="">
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- /.card -->
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">List portfolio items</h3>
          <div class="card-tools">
            <div class="input-group ">
              <a class="btn btn-sm btn-block btn-primary" href="{{ path('addBlogPostItem') }}"> Add new item</a>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
          <table class="table table-head-fixed text-nowrap">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Flag</th>
                <th>Creation date</th>
                <th>End date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for   blogItem in  listBlogtDashboard %}
              <tr>
                <td><a href="{{path('updateBlogPostItem', {'id':  blogItem.id})}}">{{  blogItem.title}}</a></td>
                <td>{{  blogItem.description | striptags | u.truncate(70, '...')}}</td>
                <td>{{  blogItem.flag}}</td>
                <td>{{  blogItem.createdAt.format('d/m/Y')}}</td>
                <td>{{  blogItem.deprecatedAt.format('d/m/Y')}}</td>
                <td><a href="{{path('deleteBlogPostItem', {'id':  blogItem.id})}}" class="btn btn-danger"><i
                      class="fas fa-trash"></i></a></td>
              </tr>
              {% else %}
              <tr>
                <td colspan="7">no records found</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
</section>
{% endblock %}