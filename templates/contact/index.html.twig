{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}
{% block section %} Contact {% endblock %}
{% block body %}
<!-- contact -->
<section class="section section-on-footer" data-background="{{ asset('front/images/backgrounds/bg-dots.png')}}">
    <div class="container">
        {% for message in app.flashes('message') %}
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src="..." class="rounded mr-2" alt="...">
                <strong class="mr-auto">Bootstrap</strong>
                <small class="text-muted">just now</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                {{ message }}
            </div>
        </div>

        {% endfor %}
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="section-title">Contact Info</h2>
            </div>
            <div class="col-lg-8 mx-auto">
                <div class="bg-white rounded text-center p-5 shadow-down">
                    <h4 class="mb-80">Contact Form</h4>
                    {{ form_start( contactForm, {'attr': {'class': 'row'}}) }}
                    <form action="#" class="row">
                        <div class="col-md-6">
                            {{ form_widget( contactForm.fullName, {'attr': {'class': 'form-control px-0 mb-4', 'placeholder':'Enter your full name'}})
                            }}
                        </div>
                        <div class="col-md-6">
                            {{ form_widget( contactForm.email, {'attr': {'class': 'form-control px-0 mb-4', 'placeholder':'Enter your email'}})
                            }}
                        </div>
                        <div class="col-12">
                            {{ form_widget( contactForm.message, {'attr': {'class': 'form-control px-0 mb-4', 'placeholder':'Enter your message'}})
                            }}
                        </div>
                        <div class="col-lg-6 col-10 mx-auto">
                            <button class="btn btn-primary w-100">send</button>
                        </div>
                    </form>
                    {{ form_end( contactForm) }}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /contact -->
{% endblock %}